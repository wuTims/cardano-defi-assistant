# .env.example â€” Wallet Sync Service
# Copy this file to .env and set real values.
# NOTE: Variables prefixed with NEXT_PUBLIC_ are exposed to the browser.

# --- Application (Public) ---
NEXT_PUBLIC_APP_NAME=Wallet Sync Service
NEXT_PUBLIC_APP_URL=http://localhost:3000

# --- Supabase (Public) ---
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your-anon-or-public-key

# --- Supabase (Server) ---
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# --- Auth / JWT (Server) ---
# Base64-encoded JSON Web Key (private JWK) used for signing JWTs
SUPABASE_SIGNING_PRIVATE_JWK_B64=base64-encoded-jwk
# Optional: PEM-encoded public key for verification (used by other services)
JWT_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----your-public-key-----END PUBLIC KEY-----
# Algorithm for JWT signing. Defaults to ES256.
JWT_ALGORITHM=ES256
# Key ID for the signing key (matches JWK kid)
SUPABASE_SIGNING_KEY_KID=your-key-id
# Issuer claim for issued tokens
JWT_ISSUER=wallet-sync-service
# Token expiry (seconds). Default 1800 (30m)
JWT_EXPIRES_IN=1800
# Challenge TTL (seconds). Default 300 (5m)
CHALLENGE_TTL=300

# --- External APIs (Server) ---
# Blockfrost API for Cardano network
BLOCKFROST_URL=https://cardano-mainnet.blockfrost.io/api/v0
BLOCKFROST_KEY=your-blockfrost-key
# Price API (defaults to CoinGecko)
PRICE_API_URL=https://api.coingecko.com/api/v3
PRICE_API_KEY=

# --- Wallet Sync Settings (Server) ---
# Background sync interval (seconds). Default 3600 (1h)
WALLET_SYNC_INTERVAL=3600
# Retry settings
WALLET_MAX_RETRIES=3
WALLET_RETRY_DELAY=1000
# Concurrency for outgoing requests
MAX_CONCURRENT_REQUESTS=5

# --- Node/Environment ---
# NODE_ENV=development

# Optional: Test/CI variables (not required for local dev)
# CI=true
# GITHUB_ACTIONS=true
# BASE_URL=http://localhost:3000
# SLOW_MO=0
